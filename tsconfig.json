{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "allowJs": false,
    "sourceMap": false,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "test",
  ]
}